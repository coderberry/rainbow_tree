<nav class="flex mb-4" aria-label="Breadcrumb">
  <ol class="inline-flex items-center space-x-1 md:space-x-2 rtl:space-x-reverse">
    <% crumbs.each_with_index do |crumb, index| %>
      <li class="inline-flex items-center">
        <a href="<%= crumb[:path] %>" class="inline-flex items-center text-sm font-medium text-gray-700 hover:text-blue-600 dark:text-gray-400 dark:hover:text-white">
          <%= index == 0 ? home_icon : chevron_icon %>
          <%= crumb[:text] %>
        </a>
      </li>
    <% end %>
  </ol>
</nav>
